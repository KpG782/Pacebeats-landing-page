---
import Layout from '../layouts/Layout.astro';
---

<Layout>
    <div class="min-h-screen bg-black">
        <!-- Header -->
        <header class="bg-black text-white py-16 px-6 border-b border-white/10">
            <div class="max-w-7xl mx-auto">
                <a href="/" class="inline-flex items-center gap-2 text-white/80 hover:text-white mb-6 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                    </svg>
                    <span>Back to Home</span>
                </a>
                <h1 class="text-4xl md:text-5xl font-bold mb-4">Terms of Service</h1>
                <p class="text-white/90 text-lg">Please review our terms of service carefully.</p>
                <p class="text-white/70 text-sm mt-4">Last Updated: December 27, 2025</p>
            </div>
        </header>

        <!-- Content -->
        <main class="max-w-6xl mx-auto px-6 py-12">
            <div class="bg-gray-900/50 backdrop-blur-sm rounded-2xl border border-white/10 p-8 md:p-12 space-y-8">
