<style>
    /* Inter font consistency */
    .font-inter {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        font-feature-settings: 'cv02', 'cv03', 'cv04', 'cv11';
        letter-spacing: -0.025em;
    }
    
    /* Card hover effects */
    .bg-gray-900:hover {
        border-color: #4B5563;
        transform: translateY(-2px);
        transition: all 0.3s ease;
    }
    
    /* Icon hover effects */
    .w-12.h-12:hover,
    .w-16.h-16:hover {
        transform: scale(1.05);
        transition: all 0.3s ease;
    }
    
    /* Tech stack dot animations */
    .w-3.h-3 {
        transition: all 0.3s ease;
    }
    
    .w-3.h-3:hover {
        transform: scale(1.2);
        box-shadow: 0 0 10px currentColor;
    }
    
    /* Responsive adjustments */
    @media (max-width: 1024px) {
        .grid-cols-1.lg\\:grid-cols-4 {
            grid-template-columns: repeat(2, minmax(0, 1fr));
        }
    }
    
    @media (max-width: 768px) {
        .text-4xl.md\\:text-5xl.lg\\:text-6xl {
            font-size: 2.5rem;
        }
        
        .grid-cols-1.lg\\:grid-cols-4 {
            grid-template-columns: repeat(1, minmax(0, 1fr));
        }
    }
    
    /* Accessibility */
    @media (prefers-reduced-motion: reduce) {
        .bg-gray-900:hover,
        .w-12.h-12:hover,
        .w-16.h-16:hover,
        .w-3.h-3:hover {
            transform: none;
        }
    }
    
    /* Focus styles for keyboard navigation */
    .bg-gray-900:focus-within {
        outline: 2px solid #3B82F6;
        outline-offset: 2px;
    }
    
    /* Enhanced staggered animation for tech cards */
    .tech-card {
        opacity: 0;
        transform: translateY(30px) scale(0.95);
        transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
        will-change: transform, opacity;
    }

    .tech-card.animate-in {
        opacity: 1;
        transform: translateY(0) scale(1);
    }

    /* Progressive delays for tech categories */
    .tech-card[data-category="frontend"] {
        transition-delay: 0ms;
    }

    .tech-card[data-category="backend"] {
        transition-delay: 150ms;
    }

    .tech-card[data-category="architecture"] {
        transition-delay: 300ms;
    }

    .tech-card[data-category="development"] {
        transition-delay: 450ms;
    }

    /* Architecture layer animations */
    .arch-layer {
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.5s ease;
    }

    .arch-layer.animate-in {
        opacity: 1;
        transform: translateY(0);
    }

    .arch-layer[data-layer="presentation"] {
        transition-delay: 600ms;
    }

    .arch-layer[data-layer="domain"] {
        transition-delay: 750ms;
    }

    .arch-layer[data-layer="data"] {
        transition-delay: 900ms;
    }

    /* Feature cards animation */
    .feature-card {
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.4s ease;
    }

    .feature-card.animate-in {
        opacity: 1;
        transform: translateY(0);
    }

    /* Enhanced accessibility styles */
    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
    }

    /* Enhanced focus styles */
    .tech-card:focus-visible,
    .feature-card:focus-visible {
        outline: 3px solid rgba(59, 130, 246, 0.8);
        outline-offset: 4px;
        transform: translateY(-4px) scale(1.02);
    }

    /* High contrast mode support */
    @media (prefers-contrast: high) {
        .tech-card,
        .feature-card {
            border: 2px solid #ffffff;
        }
        
        .text-gray-300,
        .text-gray-400 {
            color: #ffffff;
        }
        
        .bg-gray-800 {
            background-color: #000000;
            border: 1px solid #ffffff;
        }
    }

    /* Reduced motion support */
    @media (prefers-reduced-motion: reduce) {
        .tech-card,
        .arch-layer,
        .feature-card {
            transition: none;
            opacity: 1;
            transform: none;
        }
        
        .bg-gray-900:hover,
        .w-12.h-12:hover,
