<style>
    /* Gentle heartbeat animation for "Own the Pace" */
    @keyframes heartbeat {
        0% {
            transform: scale(1);
            box-shadow: 0 4px 15px rgba(239, 68, 68, 0.3);
        }
        14% {
            transform: scale(1.05);
            box-shadow: 0 6px 20px rgba(239, 68, 68, 0.4);
        }
        28% {
            transform: scale(1);
            box-shadow: 0 4px 15px rgba(239, 68, 68, 0.3);
        }
        42% {
            transform: scale(1.05);
            box-shadow: 0 6px 20px rgba(239, 68, 68, 0.4);
        }
        56% {
            transform: scale(1);
            box-shadow: 0 4px 15px rgba(239, 68, 68, 0.3);
        }
        100% {
            transform: scale(1);
            box-shadow: 0 4px 15px rgba(239, 68, 68, 0.3);
        }
    }
    
    .heartbeat-pulse {
        animation: heartbeat 2s ease-in-out infinite;
    }
    
    /* Subtle hover effects for other word elements */
    .bg-gray-800:hover {
        background-color: #4B5563;
        transform: scale(1.02);
        transition: all 0.3s ease;
        border-color: #6B7280;
    }
    
    .bg-blue-900:hover {
        background-color: #1E3A8A;
        transform: scale(1.02);
        transition: all 0.3s ease;
        border-color: #3B82F6;
    }
    
    /* Remove harsh effects from center element */
    .heartbeat-pulse:hover {
        animation-play-state: paused;
        transform: scale(1.02);
        transition: all 0.2s ease;
    }
    
    /* Accessibility - reduce motion for users who prefer it */
    @media (prefers-reduced-motion: reduce) {
        .heartbeat-pulse {
            animation: none;
        }
        
        .bg-gray-800:hover,
        .bg-blue-900:hover,
        .heartbeat-pulse:hover {
            transform: none;
        }
    }
    
    /* Focus styles for keyboard navigation */
    .bg-gray-800:focus,
    .bg-blue-900:focus,
    .heartbeat-pulse:focus {
        outline: 2px solid #3B82F6;
        outline-offset: 2px;
    }
</style>