        user-select: none;
        will-change: transform;
    }
</style>

<script>
    // Enhanced keyboard navigation and interaction
    document.querySelectorAll('.word-tag').forEach(tag => {
        const handleInteraction = (e: KeyboardEvent | MouseEvent) => {
            if (e.type === 'keydown' && (e as KeyboardEvent).key !== 'Enter' && (e as KeyboardEvent).key !== ' ') {
                return;
            }
            
            if (e.type === 'keydown') {
                e.preventDefault();
            }
            
            // Get word information
            const word = tag.textContent?.trim();
            const category = tag.getAttribute('data-category');
            const description = tag.getAttribute('aria-label');
            
            // Announce to screen readers
            const announcement = document.createElement('div');
            announcement.setAttribute('aria-live', 'assertive');
            announcement.className = 'sr-only';
            announcement.textContent = `Selected: ${word} - ${description}`;
            document.body.appendChild(announcement);
            
            // Analytics tracking
            if ('gtag' in window) {
                (window as any).gtag('event', 'word_cloud_interaction', {
                    'event_category': 'engagement',
                    'event_label': `${category}:${word}`,
                    'value': 1
                });
            }
            
            setTimeout(() => {
                if (document.body.contains(announcement)) {
                    document.body.removeChild(announcement);
                }
            }, 2000);
        };
        
        (tag as HTMLElement).addEventListener('keydown', handleInteraction);
        (tag as HTMLElement).addEventListener('click', handleInteraction);
    });
    
    // Intersection observer for performance optimization
    if ('IntersectionObserver' in window) {
        const wordCloudObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    // Announce section load to screen readers
                    const announcement = document.createElement('div');
                    announcement.setAttribute('aria-live', 'polite');
                    announcement.className = 'sr-only';
                    announcement.textContent = 'Running terminology word cloud has loaded';
                    document.body.appendChild(announcement);
                    
                    setTimeout(() => {
                        if (document.body.contains(announcement)) {
                            document.body.removeChild(announcement);
                        }
                    }, 2000);
                }
            });
        }, {
            threshold: 0.3,
            rootMargin: '50px'
        });
        
        const wordCloudSection = document.getElementById('word-cloud');
        if (wordCloudSection) {
            wordCloudObserver.observe(wordCloudSection);
        }
    }
    
    // Performance optimization: Reduce animation complexity on low-end devices
    if ('hardwareConcurrency' in navigator && navigator.hardwareConcurrency <= 2) {
        document.documentElement.style.setProperty('--animation-complexity', 'reduced');
    }
    
    // Touch interaction optimization for mobile
    if ('ontouchstart' in window) {
        document.querySelectorAll('.word-tag').forEach(tag => {
            (tag as HTMLElement).addEventListener('touchstart', () => {
                // Prevent hover effects on touch devices
                (tag as HTMLElement).style.pointerEvents = 'auto';
            }, { passive: true });
        });
    }
</script>