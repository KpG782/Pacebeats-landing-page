<section class="bg-black text-white py-20 px-6 overflow-hidden">
    <div class="max-w-7xl mx-auto text-center">
        <!-- Main heading -->
        <div class="mb-16">
            <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
                Your Runs. Your Targets.<br>
                Your Crew.
            </h2>
        </div>
        
        <!-- Phone mockups - center large with smaller ones on sides -->
        <div class="flex justify-center items-end mb-16 space-x-8">
            <!-- Left phone (smaller) -->
            <img 
                src="/hero-phone.png" 
                alt="Running app interface" 
                class="w-48 md:w-56 h-auto opacity-80"
            />
            
            <!-- Center phone (main/larger) -->
            <img 
                src="/hero-phone.png" 
                alt="Running app interface showing user runs and community" 
                class="w-80 md:w-96 h-auto z-10"
            />
            
            <!-- Right phone (smaller) -->
            <img 
                src="/hero-phone.png" 
                alt="Running app interface" 
                class="w-48 md:w-56 h-auto opacity-80"
            />
        </div>
        
        <!-- Descriptive text -->
        <div class="max-w-3xl mx-auto">
            <p class="text-gray-300 text-lg leading-relaxed">
                One platform to archive training, set measurable goals, and connect with runners who push 
                you further. Precision tracking meets community momentum.
            </p>
        </div>
    </div>
</section>
