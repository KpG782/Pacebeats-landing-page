<section id="team" class="bg-black text-white py-20 px-6">
    <div class="max-w-7xl mx-auto">
        <!-- Section Header -->
        <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl lg:text-6xl font-black text-white font-inter leading-tight mb-4">
                Meet the Team
            </h2>
            <p class="text-gray-300 text-lg md:text-xl max-w-3xl mx-auto leading-relaxed">
                The passionate developers and designers behind PaceBeats, dedicated to revolutionizing how runners track and achieve their goals.
            </p>
        </div>

        <!-- Team Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <!-- Ken Patrick Garcia -->
            <div class="bg-gray-900 p-8 rounded-2xl border border-gray-800 hover:border-blue-600 transition-all duration-300 group">
                <div class="text-center">
                    <!-- Avatar placeholder -->
                    <div class="w-24 h-24 bg-gradient-to-r from-blue-500 to-blue-600 rounded-full mx-auto mb-6 flex items-center justify-center">
                        <span class="text-2xl font-bold text-white">KG</span>
                    </div>
                    
                    <!-- Name and primary role -->
                    <h3 class="text-xl font-bold text-white mb-2 font-inter">Ken Patrick Garcia</h3>
                    <p class="text-blue-400 font-semibold mb-4">Project Leader</p>
                    
                    <!-- Role description -->
                    <p class="text-gray-400 text-sm leading-relaxed mb-4">
                        Android Developer & Project Coordinator. Leads the development of PaceBeats' core Android functionality and Samsung Health integration.
                    </p>
                    
                    <!-- Skills/Technologies -->
                    <div class="flex flex-wrap gap-2 justify-center">
                        <span class="bg-gray-800 text-gray-300 px-3 py-1 rounded-full text-xs">Kotlin</span>
                        <span class="bg-gray-800 text-gray-300 px-3 py-1 rounded-full text-xs">Android</span>
                        <span class="bg-gray-800 text-gray-300 px-3 py-1 rounded-full text-xs">Leadership</span>
                    </div>
                </div>
            </div>

            <!-- Timothy Forte -->
            <div class="bg-gray-900 p-8 rounded-2xl border border-gray-800 hover:border-blue-600 transition-all duration-300 group">
                <div class="text-center">
                    <!-- Avatar placeholder -->
                    <div class="w-24 h-24 bg-gradient-to-r from-purple-500 to-purple-600 rounded-full mx-auto mb-6 flex items-center justify-center">
                        <span class="text-2xl font-bold text-white">TF</span>
                    </div>
                    
                    <!-- Name and primary role -->
                    <h3 class="text-xl font-bold text-white mb-2 font-inter">Timothy Forte</h3>
                    <p class="text-purple-400 font-semibold mb-4">UI/UX Designer</p>
                    
                    <!-- Role description -->
                    <p class="text-gray-400 text-sm leading-relaxed mb-4">
                        Frontend Developer & Design Lead. Crafts PaceBeats' intuitive user interface and ensures optimal user experience across all platforms.
                    </p>
                    
                    <!-- Skills/Technologies -->
                    <div class="flex flex-wrap gap-2 justify-center">
                        <span class="bg-gray-800 text-gray-300 px-3 py-1 rounded-full text-xs">UI/UX</span>
                        <span class="bg-gray-800 text-gray-300 px-3 py-1 rounded-full text-xs">Frontend</span>
                        <span class="bg-gray-800 text-gray-300 px-3 py-1 rounded-full text-xs">Design</span>
                    </div>
                </div>
            </div>

            <!-- Brian Ashley Papa -->
            <div class="bg-gray-900 p-8 rounded-2xl border border-gray-800 hover:border-blue-600 transition-all duration-300 group">
                <div class="text-center">
                    <!-- Avatar placeholder -->
                    <div class="w-24 h-24 bg-gradient-to-r from-green-500 to-green-600 rounded-full mx-auto mb-6 flex items-center justify-center">
                        <span class="text-2xl font-bold text-white">BP</span>
                    </div>
                    
                    <!-- Name and primary role -->
                    <h3 class="text-xl font-bold text-white mb-2 font-inter">Brian Ashley Papa</h3>
                    <p class="text-green-400 font-semibold mb-4">Backend Developer</p>
                    
                    <!-- Role description -->
                    <p class="text-gray-400 text-sm leading-relaxed mb-4">
                        Samsung Health Integration Specialist. Develops robust backend systems and ensures seamless connectivity with Samsung's health ecosystem.
                    </p>
                    
                    <!-- Skills/Technologies -->
                    <div class="flex flex-wrap gap-2 justify-center">
                        <span class="bg-gray-800 text-gray-300 px-3 py-1 rounded-full text-xs">Backend</span>
                        <span class="bg-gray-800 text-gray-300 px-3 py-1 rounded-full text-xs">Samsung Health</span>
                        <span class="bg-gray-800 text-gray-300 px-3 py-1 rounded-full text-xs">Integration</span>
                    </div>
                </div>
            </div>

            <!-- Lanz Corpuz -->
            <div class="bg-gray-900 p-8 rounded-2xl border border-gray-800 hover:border-blue-600 transition-all duration-300 group">
                <div class="text-center">
                    <!-- Avatar placeholder -->
                    <div class="w-24 h-24 bg-gradient-to-r from-orange-500 to-orange-600 rounded-full mx-auto mb-6 flex items-center justify-center">
                        <span class="text-2xl font-bold text-white">LC</span>
                    </div>
                    
                    <!-- Name and primary role -->
                    <h3 class="text-xl font-bold text-white mb-2 font-inter">Lanz Corpuz</h3>
                    <p class="text-orange-400 font-semibold mb-4">Mobile Developer</p>
                    
                    <!-- Role description -->
                    <p class="text-gray-400 text-sm leading-relaxed mb-4">
                        Quality Assurance & Frontend Mobile Developer. Ensures Pacebeats delivers a flawless experience through rigorous testing and mobile optimization.
                    </p>
                    
                    <!-- Skills/Technologies -->
                    <div class="flex flex-wrap gap-2 justify-center">
                        <span class="bg-gray-800 text-gray-300 px-3 py-1 rounded-full text-xs">Mobile Dev</span>
                        <span class="bg-gray-800 text-gray-300 px-3 py-1 rounded-full text-xs">QA</span>
                        <span class="bg-gray-800 text-gray-300 px-3 py-1 rounded-full text-xs">Testing</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bottom text -->
        <div class="text-center mt-16">
            <p class="text-gray-400 text-lg leading-relaxed max-w-2xl mx-auto">
                Built with passion in the Philippines, our team combines technical expertise with a deep understanding of what runners need to achieve their goals.
            </p>
        </div>
    </div>
</section>

<style>
    /* Inter font consistency */
    .font-inter {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        font-feature-settings: 'cv02', 'cv03', 'cv04', 'cv11';
        letter-spacing: -0.025em;
    }
    
    /* Team card hover effects */
    .group:hover {
        transform: translateY(-4px);
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    }
    
    .group:hover .w-24.h-24 {
        transform: scale(1.1);
        box-shadow: 0 8px 25px rgba(59, 130, 246, 0.3);
    }
    
    /* Avatar animations */
    .w-24.h-24 {
        transition: all 0.3s ease;
    }
    
    /* Responsive adjustments */
    @media (max-width: 1024px) {
        .grid-cols-4 {
            grid-template-columns: repeat(2, minmax(0, 1fr));
        }
    }
    
    @media (max-width: 768px) {
        .grid-cols-4 {
            grid-template-columns: repeat(1, minmax(0, 1fr));
        }
        
        .text-4xl.md\\:text-5xl.lg\\:text-6xl {
            font-size: 2.5rem;
        }
    }
    
    /* Accessibility */
    @media (prefers-reduced-motion: reduce) {
        .group:hover {
            transform: none;
        }
        
        .group:hover .w-24.h-24 {
            transform: none;
        }
    }
    
    /* Focus styles for keyboard navigation */
    .group:focus-within {
        outline: 2px solid #3B82F6;
        outline-offset: 2px;
    }
</style>