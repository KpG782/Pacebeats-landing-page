<script>
    // Enhanced intersection observer for staggered team animations
    if ('IntersectionObserver' in window) {
        const teamObserver = new IntersectionObserver((entries) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    const member = entry.target.getAttribute('data-member');
                    
                    entry.target.classList.add('animate-in');
                    
                    // Announce to screen readers for the first team member
                    if (member === '1') {
                        const announcement = document.createElement('div');
                        announcement.setAttribute('aria-live', 'polite');
                        announcement.className = 'sr-only';
                        announcement.textContent = 'Team section has loaded with 4 team members';
                        document.body.appendChild(announcement);
                        
                        setTimeout(() => {
                            if (document.body.contains(announcement)) {
                                document.body.removeChild(announcement);
                            }
                        }, 2000);
                    }
                }
            });
        }, {
            threshold: 0.2,
            rootMargin: '50px'
        });
        
        // Observe all team cards
        document.querySelectorAll('.team-card').forEach(card => {
            teamObserver.observe(card);
        });
    }
    
    // Enhanced keyboard navigation for team cards
    document.querySelectorAll('[role="listitem"]').forEach(card => {
        const handleKeydown = (e: KeyboardEvent) => {
            if (e.key === 'Enter' || e.key === ' ') {
                e.preventDefault();
                
                // Get team member information
                const name = card.querySelector('h3')?.textContent;
                const role = card.querySelector('[itemprop="jobTitle"]')?.textContent;
                const linkedinLink = card.querySelector('a[href*="linkedin"]') as HTMLAnchorElement;
                
                if (linkedinLink) {
                    // Announce LinkedIn navigation
                    const announcement = document.createElement('div');
                    announcement.setAttribute('aria-live', 'assertive');
                    announcement.className = 'sr-only';
                    announcement.textContent = `Opening LinkedIn profile for ${name}, ${role}`;
                    document.body.appendChild(announcement);
                    
                    // Open LinkedIn profile
                    window.open(linkedinLink.href, '_blank', 'noopener,noreferrer');
                    
                    setTimeout(() => {
                        if (document.body.contains(announcement)) {
                            document.body.removeChild(announcement);
                        }
                    }, 2000);
                }
            }
        };
        
        (card as HTMLElement).addEventListener('keydown', handleKeydown);
    });
    
    // Performance optimization: Preload LinkedIn favicons
    if ('requestIdleCallback' in window) {
        requestIdleCallback(() => {
            const linkedinDomain = document.createElement('link');
            linkedinDomain.rel = 'dns-prefetch';
            linkedinDomain.href = '//linkedin.com';
            document.head.appendChild(linkedinDomain);
        });
    }
</script>