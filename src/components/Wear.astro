<style>
/* Enhanced typography */
.font-inter {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-feature-settings: 'cv02', 'cv03', 'cv04', 'cv11';
    letter-spacing: -0.025em;
}

/* Enhanced heading styling */
h2.font-inter {
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.8);
    font-weight: 900;
}

/* Enhanced accessibility styles */
.sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
}

/* Button enhancements */
button {
    position: relative;
    overflow: hidden;
}

button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
}

button:hover::before {
    left: 100%;
}

button:disabled {
    opacity: 0.7;
    cursor: not-allowed;
}

button:disabled:hover {
    background-color: #dc2626;
    color: white;
}

button:disabled::before {
    display: none;
}

/* Floating indicators animation */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.animate-fade-in {
    animation: fadeIn 0.6s ease-out forwards;
    opacity: 0;
}

/* High contrast mode support */
@media (prefers-contrast: high) {
    h2.font-inter {
        text-shadow: 3px 3px 0px #000000;
        color: #ffffff;
    }
    
    .text-gray-200,
    .text-gray-400 {
        color: #ffffff;
    }
    
    button {
        border: 2px solid #ffffff;
    }
    
    button:focus {
        outline: 3px solid #ffffff;
    }
}

/* Reduced motion support */
@media (prefers-reduced-motion: reduce) {
    .animate-fade-in {
        animation: none;
        opacity: 1;
        transform: none;
    }
    
    button::before {
        display: none;
    }
    
    button:hover {
        transform: none;
    }
}

/* Enhanced focus styles */
button:focus-visible {
    outline: 3px solid rgba(255, 255, 255, 0.8);
    outline-offset: 2px;
    transform: scale(1.02);
}

/* Responsive enhancements */
@media (max-width: 768px) {
    h2.font-inter {
        font-size: 2.5rem;
        line-height: 1.1;
    }
    
    .flex-wrap {
        flex-direction: column;
        align-items: center;
    }
    
    button {
        width: 100%;
        max-width: 280px;
    }
}

@media (max-width: 640px) {
    h2.font-inter {
        font-size: 2rem;
    }
}
</style>

<script>
    // Enhanced functions for button interactions
    function showWearFeatures() {
        // Announce to screen readers
        const announcement = document.createElement('div');
        announcement.setAttribute('aria-live', 'assertive');
        announcement.className = 'sr-only';
        announcement.textContent = 'Companion features information: Real-time pace feedback, adaptive music control, and recovery insights will be available on Wear OS devices';
        document.body.appendChild(announcement);
        
        // Analytics tracking
        if ('gtag' in window) {
            (window as any).gtag('event', 'wear_features_clicked', {
                'event_category': 'engagement',
                'event_label': 'wear_os_features',
                'value': 1
            });
        }
        
        setTimeout(() => {
            if (document.body.contains(announcement)) {
                document.body.removeChild(announcement);
            }
        }, 3000);
    }
    
    function scrollToFeatures() {
        const featuresSection = document.getElementById('features');
        if (featuresSection) {
            featuresSection.scrollIntoView({ 
                behavior: 'smooth', 
                block: 'start' 
            });
            
            // Announce navigation
            const announcement = document.createElement('div');
            announcement.setAttribute('aria-live', 'polite');
            announcement.className = 'sr-only';
            announcement.textContent = 'Navigating to features section';
            document.body.appendChild(announcement);
            
            setTimeout(() => {
                if (document.body.contains(announcement)) {
                    document.body.removeChild(announcement);
                }
            }, 2000);
        }
        
        // Analytics tracking
        if ('gtag' in window) {
            (window as any).gtag('event', 'learn_more_clicked', {
                'event_category': 'navigation',
                'event_label': 'wear_os_learn_more',
                'value': 1
            });
        }
    }
    
    // Enhanced keyboard navigation
    document.addEventListener('keydown', (e: KeyboardEvent) => {
        if (e.target instanceof HTMLButtonElement && (e.key === 'Enter' || e.key === ' ')) {
            e.preventDefault();
            e.target.click();
        }
    });
    
    // Intersection observer for floating indicators
    if ('IntersectionObserver' in window) {
        const wearObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    // Announce section load to screen readers
                    const announcement = document.createElement('div');
                    announcement.setAttribute('aria-live', 'polite');
                    announcement.className = 'sr-only';
                    announcement.textContent = 'Pacebeats Wear OS section has loaded';
                    document.body.appendChild(announcement);
                    
                    setTimeout(() => {
                        if (document.body.contains(announcement)) {
                            document.body.removeChild(announcement);
                        }
                    }, 2000);
                }
            });
        }, {
            threshold: 0.3,
            rootMargin: '50px'
        });
        
        const wearSection = document.getElementById('wear-os');
        if (wearSection) {
            wearObserver.observe(wearSection);
        }
    }
    
    // Error handling for background image
    window.addEventListener('load', () => {
        const section = document.querySelector('section[style*="wear1.jpg"]') as HTMLElement;
        if (section) {
            const img = new Image();
            img.onload = () => {
                console.log('Wear OS background image loaded successfully');
            };
            img.onerror = () => {
                console.warn('Wear OS background image failed to load');
                section.style.backgroundColor = '#1f2937';
            };
            img.src = '/wear1.jpg';
        }
    });
    
    // Expose functions globally for onclick handlers
    (window as any).showWearFeatures = showWearFeatures;
    (window as any).scrollToFeatures = scrollToFeatures;
</script>
