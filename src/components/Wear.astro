<section class="relative min-h-screen bg-cover bg-center bg-no-repeat" style="background-image: url('/wear1.jpg');">
    <!-- Dark overlay -->
   
    
    <!-- Content -->
    <div class="relative z-10 flex flex-col items-center justify-center min-h-screen text-center text-white px-6">
        <!-- Heading -->
        <div class="mb-8">
            <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
                Level Up: <br>
                Wrist Edition
            </h2>
        </div>
   
        
        <!-- Description text -->
        <div class="mb-8 max-w-md">
            <p class="text-gray-200 text-lg">
                Your Watch might be needed (Integration Soon). Get real-time stats, pace alerts, and recovery tips right on your wrist - no phone checking needed.
            </p>
        </div>
        
        <!-- Action buttons -->
        <div class="flex flex-wrap justify-center gap-4">
            <button class="bg-transparent border border-gray-400 text-white px-6 py-3 rounded-full font-medium hover:bg-white hover:text-black transition-colors">
                Haptic Pace Coach
            </button>
            <button class="bg-red-600 hover:bg-red-700 text-white px-6 py-3 rounded-full font-medium transition-colors">
                Enable on Watch
            </button>
            <button class="bg-transparent border border-gray-400 text-white px-6 py-3 rounded-full font-medium hover:bg-white hover:text-black transition-colors">
                Race Strategy
            </button>
        </div>
    </div>
</section>
