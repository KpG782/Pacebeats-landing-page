<style>
    /* Athletic typography styling */
    .hero-title {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        font-weight: 900;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
        letter-spacing: -0.02em;
    }
    
    /* Text glowing effect */
    .text-glow {
        color: #ffffff;
        text-shadow: 
            0 0 10px rgba(59, 130, 246, 0.5),
            0 0 20px rgba(59, 130, 246, 0.3),
            0 0 40px rgba(59, 130, 246, 0.2),
            2px 2px 4px rgba(0, 0, 0, 0.8);
        animation: textGlow 3s ease-in-out infinite alternate;
    }
    
    @keyframes textGlow {
        from {
            text-shadow: 
                0 0 10px rgba(59, 130, 246, 0.5),
                0 0 20px rgba(59, 130, 246, 0.3),
                0 0 40px rgba(59, 130, 246, 0.2),
                2px 2px 4px rgba(0, 0, 0, 0.8);
        }
        to {
            text-shadow: 
                0 0 15px rgba(59, 130, 246, 0.8),
                0 0 30px rgba(59, 130, 246, 0.5),
                0 0 50px rgba(59, 130, 246, 0.3),
                2px 2px 4px rgba(0, 0, 0, 0.8);
        }
    }
    
    /* Responsive typography scaling */
    @media (max-width: 768px) {
        .hero-title {
            font-size: 3rem;
            line-height: 0.85;
        }
    }
    
    @media (max-width: 480px) {
        .hero-title {
            font-size: 2.5rem;
            line-height: 0.9;
        }
    }
    
    /* Additional responsive fixes for the hero section */
    #hero {
        max-width: 100vw;
        overflow-x: hidden;
    }
    
    /* Ensure proper spacing with fixed navbar */
    @media (min-width: 768px) {
        #hero {
            padding-top: 4rem; /* Account for fixed navbar */
        }
    }
    
    /* Mobile adjustments */
    @media (max-width: 767px) {
        #hero {
            padding-top: 4rem; /* Account for mobile navbar */
        }
        
        .hero-title {
            font-size: 2.25rem !important;
            line-height: 1.1;
            margin-bottom: 1rem !important; /* Reduced spacing */
        }
        
        .text-base {
            font-size: 0.95rem;
        }
    }
    
    /* Very small screens */
    @media (max-width: 480px) {
        .hero-title {
            font-size: 1.875rem !important;
            margin-bottom: 0.75rem !important; /* Further reduced spacing */
        }
        
        .text-base {
            font-size: 0.875rem;
            margin-bottom: 1.5rem !important; /* Reduced spacing */
        }
    }
    
    /* Landscape mobile fix */
    @media (max-height: 600px) and (orientation: landscape) {
        #hero {
            min-height: 100vh;
            padding-top: 3rem;
        }
        
        .hero-title {
            font-size: 1.75rem !important;
            margin-bottom: 1rem;
        }
        
        .mb-8, .mb-12 {
            margin-bottom: 1rem;
        }
        
        .mb-12.sm\:mb-16, .mb-16 {
            margin-bottom: 1.5rem;
        }
    }
    
    /* Enhanced hover effects */
    button {
        position: relative;
        overflow: hidden;
    }
    
    button::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s;
    }
    
    button:hover::before {
        left: 100%;
    }
    
    /* Smooth scrolling enhancement */
    html {
        scroll-behavior: smooth;
    }
    
    /* Loading animation for hero */
    .hero-title span {
        display: inline-block;
        animation: fadeInUp 1s ease-out forwards;
        opacity: 0;
        transform: translateY(30px);
    }
    
    .hero-title span:first-child {
        animation-delay: 0.2s;
    }
    
    .hero-title span:last-child {
        animation-delay: 0.4s;
    }
    
    @keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    /* Performance optimizations */
    .hero-title,
    button {
        will-change: transform;
    }
    
    /* Accessibility improvements */
    @media (prefers-reduced-motion: reduce) {
        .hero-title span {
            animation: none;
            opacity: 1;
            transform: none;
        }
        
        .text-glow {
            animation: none;
        }
        
        .animate-bounce,
        .animate-pulse {
            animation: none;
        }
        
        * {
            transition-duration: 0.01ms !important;
        }
    }
    
    /* High contrast mode support */
    @media (prefers-contrast: high) {
        .hero-title {
            text-shadow: 3px 3px 0px #000000;
        }
        
        .text-glow {
            text-shadow: 3px 3px 0px #000000;
            animation: none;
        }
        
        .text-gray-100 {
            color: #ffffff;
        }
    }
    
    /* Focus styles for accessibility */
    button:focus-visible {
        outline: 3px solid #ffffff;
        outline-offset: 2px;
    }
    
    /* Enhanced accessibility styles */
    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
    }
    
    /* Focus indicators for keyboard navigation */
    button:focus-visible,
    [role="button"]:focus-visible {
        outline: 3px solid #ffffff;
        outline-offset: 2px;
        box-shadow: 0 0 0 6px rgba(59, 130, 246, 0.5);
    }
    
    /* Enhanced contrast for text readability */
    @media (prefers-contrast: high) {
        .hero-title {
            text-shadow: 3px 3px 0px #000000, -1px -1px 0px #000000;
            color: #ffffff;
        }
        
        .text-glow {
            text-shadow: 3px 3px 0px #000000, -1px -1px 0px #000000;
            animation: none;
            color: #ffffff;
        }
        
        .text-gray-100 {
            color: #ffffff;
            text-shadow: 1px 1px 0px #000000;
        }
        
        button {
            border: 2px solid #ffffff;
        }
    }
    
    /* Improved keyboard navigation styles */
    [role="button"]:hover {
        transform: scale(1.1);
        transition: transform 0.2s ease;
    }
    
    /* Loading states for better UX */
    .hero-content-loading {
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.6s ease, transform 0.6s ease;
    }
    
    .hero-content-loaded {
        opacity: 1;
        transform: translateY(0);
    }
    
    /* Responsive image optimization */
    img {
        object-fit: contain;
        object-position: center;
    }
</style>

<script>
    // Enhanced accessibility and performance functions
    function scrollToSection(sectionId: string) {
        const element = document.getElementById(sectionId);
        if (element) {
            // Announce navigation to screen readers
            const announcement = document.createElement('div');
            announcement.setAttribute('aria-live', 'polite');
            announcement.setAttribute('aria-atomic', 'true');
            announcement.className = 'sr-only';
            announcement.textContent = `Navigating to ${sectionId} section`;
            document.body.appendChild(announcement);
            
            // Smooth scroll with focus management
            element.scrollIntoView({ 
                behavior: 'smooth', 
                block: 'start' 
            });
            
            // Set focus to the section for screen readers
            setTimeout(() => {
                element.setAttribute('tabindex', '-1');
                element.focus();
                document.body.removeChild(announcement);
            }, 1000);
            
            // Analytics tracking
            if ('gtag' in window) {
                (window as any).gtag('event', 'scroll_to_section', {
                    'event_category': 'engagement',
                    'event_label': sectionId,
                    'value': 1
                });
            }
        }
    }
    
    // Enhanced keyboard navigation for scroll indicator
    function handleScrollIndicatorKeydown(event: KeyboardEvent) {
        if (event.key === 'Enter' || event.key === ' ') {
            event.preventDefault();
            scrollToSection('features');
        }
    }
    
    // Enhanced performance with intersection observer
    if ('IntersectionObserver' in window) {
        const heroObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('hero-content-loaded');
                    entry.target.classList.remove('hero-content-loading');
                    
                    // Announce content load to screen readers
                    const announcement = document.createElement('div');
                    announcement.setAttribute('aria-live', 'polite');
                    announcement.className = 'sr-only';
                    announcement.textContent = 'Pacebeats homepage content has loaded';
                    document.body.appendChild(announcement);
                    
                    setTimeout(() => {
                        if (document.body.contains(announcement)) {
                            document.body.removeChild(announcement);
                        }
                    }, 2000);
                }
            });
        }, {
            threshold: 0.1,
            rootMargin: '50px'
        });
        
        const heroSection = document.querySelector('#hero');
        if (heroSection) {
            heroSection.classList.add('hero-content-loading');
            heroObserver.observe(heroSection);
        }
    }
    
    // Optimized parallax effect with reduced motion support
    let ticking = false;
    function updateParallax() {
        if (window.innerWidth > 768 && !window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
            const scrolled = window.pageYOffset;
            const heroSection = document.querySelector('#hero') as HTMLElement;
            if (heroSection && scrolled < window.innerHeight) {
                heroSection.style.transform = `translateY(${scrolled * 0.3}px)`;
            }
        }
        ticking = false;
    }
    
    window.addEventListener('scroll', () => {
        if (!ticking) {
            requestAnimationFrame(updateParallax);
            ticking = true;
        }
    }, { passive: true });
    
    // Preload critical resources for performance
    if ('requestIdleCallback' in window) {
        requestIdleCallback(() => {
            // Preload hero image
            const heroImg = new Image();
            heroImg.src = '/hero-section-1.svg';
            
            // Preload next section images
            const preloadImages = ['/features-preview.jpg', '/app-interface.jpg'];
            preloadImages.forEach(src => {
                const img = new Image();
                img.src = src;
            });
        });
    }
    
    // Enhanced error handling and fallbacks
    window.addEventListener('error', (e) => {
        if (e.target instanceof HTMLImageElement) {
            // Fallback for failed image loads
            e.target.style.display = 'none';
            console.warn('Image failed to load:', e.target.src);
        }
    });
    
    // Expose functions globally for onclick handlers
    (window as any).scrollToSection = scrollToSection;
    (window as any).handleScrollIndicatorKeydown = handleScrollIndicatorKeydown;
</script>