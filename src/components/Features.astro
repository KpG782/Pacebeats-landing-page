    <div class="absolute top-1/3 right-4 sm:right-6 md:right-8 bg-black/70 backdrop-blur-sm px-2 py-1 rounded-md border border-white/30 z-10">
        <span class="text-white text-xs font-medium">Split Analysis</span>
    </div>
    
    <div class="absolute bottom-1/3 right-4 sm:right-6 md:right-8 bg-black/70 backdrop-blur-sm px-2 py-1 rounded-md border border-white/30 z-10">
        <span class="text-white text-xs font-medium">Distance Analysis</span>
    </div>
    
    <!-- Bottom area - Fix mobile positioning -->
    <div class="absolute bottom-4 left-8 sm:left-1/4 sm:bottom-6 md:bottom-8 md:left-1/4 bg-black/70 backdrop-blur-sm px-2 py-1 rounded-md border border-white/30 z-10">
        <span class="text-white text-xs font-medium">Run Wild</span>
    </div>
    
    <div class="absolute bottom-4 right-8 sm:right-1/4 sm:bottom-6 md:bottom-8 md:right-1/4 bg-black/70 backdrop-blur-sm px-2 py-1 rounded-md border border-white/30 z-10">
        <span class="text-white text-xs font-medium">Interval Boost</span>
    </div>
</div>


<style>
/* Inter font family for clean, athletic typography */
.font-inter {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-feature-settings: 'cv02', 'cv03', 'cv04', 'cv11';
    letter-spacing: -0.02em;
    font-weight: 700;
}

/* Enhanced feature card styling to match the image */
.bg-gray-900 {
    background: linear-gradient(135deg, #1f2937 0%, #111827 100%);
}

.bg-gradient-to-br {
    background: linear-gradient(135deg, #991b1b 0%, #7f1d1d 100%);
}

/* Card hover effects */
.bg-gray-900:hover {
    transform: translateY(-2px);
    transition: all 0.3s ease;
    border-color: #4B5563;
}

/* Featured card styling */
.bg-gradient-to-br.from-red-800.to-red-900 {
    box-shadow: 0 4px 20px rgba(220, 38, 38, 0.2);
}

.absolute.bg-black\/70 {
    animation: subtleFloat 4s ease-in-out infinite alternate;
    transition: all 0.2s ease;
}

.absolute.bg-black\/70:nth-child(odd) {
    animation-delay: 0.5s;
}

.absolute.bg-black\/70:nth-child(even) {
    animation-delay: 1.5s;
}

@keyframes subtleFloat {
    from {
        transform: translateY(0px);
        opacity: 0.85;
    }
    to {
        transform: translateY(-3px);
        opacity: 1;
    }
}

/* Compact hover effects */
.absolute.bg-black\/70:hover {
    background: rgba(0, 0, 0, 0.85);
    transform: scale(1.02) translateY(-1px);
    border-color: rgba(255, 255, 255, 0.5);
}

/* Remove old floating label styles */
.absolute.bg-white\/10 {
    display: none;
}

/* Responsive adjustments for compact labels */
@media (max-width: 768px) {
    .absolute.bg-black\/70 {
        padding: 0.2rem 0.4rem;
    }
    
    .absolute.bg-black\/70 span {
        font-size: 0.7rem;
    }
}

/* Hover effects for labels */
.absolute.bg-white\/10:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: scale(1.05) translateY(-2px);
    border-color: rgba(255, 255, 255, 0.4);
}

/* Enhanced center text styling */
h2.font-inter, h3.font-inter {
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.7);
    font-weight: 900;
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .absolute.bg-white\/10 {
        padding: 0.25rem 0.5rem;
    }
    
    .absolute.bg-white\/10 span {
        font-size: 0.6rem;
    }
    
    /* Adjust positions on mobile */
    .absolute.top-6.left-6 { top: 1rem; left: 1rem; }
    .absolute.top-8.right-8 { top: 1rem; right: 1rem; }
    .absolute.bottom-6.left-1\/4 { bottom: 1rem; left: 1rem; }
    .absolute.bottom-8.right-1\/4 { bottom: 1rem; right: 1rem; }
}

/* Accessibility improvements */
@media (prefers-reduced-motion: reduce) {
    .absolute.bg-white\/10 {
        animation: none;
    }
    
    .absolute.bg-white\/10:hover {
        transform: scale(1.02);
    }
}

/* Focus styles for keyboard navigation */
.absolute.bg-white\/10:focus {
    outline: 2px solid rgba(255, 255, 255, 0.8);
    outline-offset: 2px;
}

/* Enhanced mobile positioning */
@media (max-width: 640px) {
    .absolute.bg-black\/70 {
        padding: 0.15rem 0.3rem;
    }
    
    .absolute.bg-black\/70 span {
        font-size: 0.65rem;
    }
    
    /* Specific mobile positioning to prevent overlap */
    .absolute.bottom-4.left-8 {
        bottom: 0.75rem;
        left: 0.5rem;
    }
    
    .absolute.bottom-4.right-8 {
        bottom: 0.75rem;
        right: 0.5rem;
    }
    
    /* Adjust other bottom labels */
    .absolute.bottom-1\/3 {
        bottom: 35%;
    }
}

/* Tablet adjustments */
@media (min-width: 641px) and (max-width: 768px) {
    .absolute.bg-black\/70 {
        padding: 0.2rem 0.4rem;
    }
    
    .absolute.bg-black\/70 span {
        font-size: 0.7rem;
    }
}

/* Enhanced hover effects for feature cards */
.bg-gray-900:hover {
        transform: translateY(-2px);
        transition: all 0.3s ease;
    }
    
    /* Featured card subtle animation */
    .bg-blue-900 {
        box-shadow: 0 0 20px rgba(59, 130, 246, 0.1);
        animation: subtlePulse 4s ease-in-out infinite alternate;
    }
    
    @keyframes subtlePulse {
        from {
            box-shadow: 0 0 20px rgba(59, 130, 246, 0.1);
        }
        to {
            box-shadow: 0 0 25px rgba(59, 130, 246, 0.15);
        }
    }
    
    /* Improved floating labels */
    .absolute.bg-black\/80 {
        transition: all 0.3s ease;
    }
    
    .absolute.bg-black\/80:hover {
        background: rgba(59, 130, 246, 0.9);
        transform: scale(1.05);
    }
    
    /* Accessibility and performance */
    @media (prefers-reduced-motion: reduce) {
        .bg-blue-900 {
            animation: none;
        }
        
        .bg-gray-900:hover {
            transform: none;
        }
        
        .absolute.bg-black\/80:hover {
            transform: none;
        }
    }
    
    /* Focus styles for keyboard navigation */
    .bg-gray-900:focus-within,
    .bg-blue-900:focus-within {
        outline: 2px solid rgba(59, 130, 246, 0.5);
        outline-offset: 2px;
    }
</style>
    </div>
</section>