<section id="features" class="bg-black text-white py-20 px-6">
    <div class="max-w-7xl mx-auto">
        <!-- Feature cards grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <!-- Real-Time Heart Rate Monitoring (Featured) -->
            <div class="bg-blue-900 p-8 rounded-2xl h-80 relative overflow-hidden">
                <div class="relative z-10">
                    <h3 class="text-xl font-bold mb-4 leading-tight text-white">
                        Real-Time Heart Rate<br>
                        Monitoring
                    </h3>
                    <p class="text-blue-100 text-sm leading-relaxed">
                        Monitor every step with real-time GPS and pace analytics to keep you right on target. Perfect for training and race day.
                    </p>
                </div>
                <!-- Subtle gradient overlay -->
                <div class="absolute inset-0 bg-gradient-to-br from-blue-800/50 to-blue-900/80"></div>
            </div>
            
            <!-- Smart Pace Detection -->
            <div class="bg-gray-900 p-8 rounded-2xl h-80 border border-gray-800 hover:border-gray-700 transition-colors">
                <h3 class="text-xl font-bold mb-4 leading-tight text-gray-200">
                    Smart Pace<br>
                    Detection
                </h3>
                <p class="text-gray-400 text-sm leading-relaxed">
                    AI-powered pace analysis that evolves with your running style, keeping you optimized and avoiding overexertion.
                </p>
            </div>
            
            <!-- Galaxy Watch Integration -->
            <div class="bg-gray-900 p-8 rounded-2xl h-80 border border-gray-800 hover:border-gray-700 transition-colors">
                <h3 class="text-xl font-bold mb-4 leading-tight text-gray-200">
                    Galaxy Watch<br>
                    Integration
                </h3>
                <p class="text-gray-400 text-sm leading-relaxed">
                    Seamless sync with Galaxy Watch for hands-free tracking. Monitor heart rate, pace, and distance directly from your wrist.
                </p>
            </div>
            
            <!-- Dark Mode UI -->
            <div class="bg-gray-900 p-8 rounded-2xl h-80 border border-gray-800 hover:border-gray-700 transition-colors">
                <h3 class="text-xl font-bold mb-4 leading-tight text-gray-200">
                    Dark Mode<br>
                    UI
                </h3>
                <p class="text-gray-400 text-sm leading-relaxed">
                    Optimized dark interface for outdoor visibility and reduced eye strain during early morning or night runs.
                </p>
            </div>
        </div>

        <!-- Intro Text -->
        <div class="text-center my-16">
            <p class="text-gray-300 text-lg max-w-3xl mx-auto leading-relaxed">
                From quick morning jogs to ultra-distance marathons, PaceBeats equips you with the tools, 
                insights, and motivation to go further.
            </p>
        </div>

  <!-- Hero Image Section -->
<div class="relative rounded-3xl overflow-hidden min-h-[500px] md:min-h-[600px]">
    <img 
        src="/users.jpg" 
        alt="Athletes running" 
        class="w-full h-full object-cover"
    />
    
    <!-- Dynamic overlay with gradient -->
    <div class="absolute inset-0 bg-gradient-to-r from-black/60 via-black/30 to-black/50"></div>

    <!-- Center text -->
    <div class="absolute inset-0 flex items-center justify-center z-20">
        <h2 class="text-4xl md:text-6xl lg:text-7xl font-black text-white text-center font-inter leading-tight">
            Built for Every Athlete
        </h2>
    </div>
    
    <!-- Floating feature labels positioned dynamically -->
    <!-- Top left area -->
    <div class="absolute top-6 left-6 bg-white/10 backdrop-blur-md px-3 py-1.5 rounded-lg border border-white/20 z-10">
        <span class="text-white text-xs font-medium">Pace Tracking</span>
    </div>
    
    <!-- Top right area -->
    <div class="absolute top-8 right-8 bg-white/10 backdrop-blur-md px-3 py-1.5 rounded-lg border border-white/20 z-10">
        <span class="text-white text-xs font-medium">Night Run Ready</span>
    </div>
    
    <!-- Left side, upper middle -->
    <div class="absolute top-1/4 left-4 bg-white/10 backdrop-blur-md px-3 py-1.5 rounded-lg border border-white/20 z-10">
        <span class="text-white text-xs font-medium">Break Your Pace</span>
    </div>
    
    <!-- Left side, lower middle -->
    <div class="absolute bottom-1/3 left-6 bg-white/10 backdrop-blur-md px-3 py-1.5 rounded-lg border border-white/20 z-10">
        <span class="text-white text-xs font-medium">Urban Routes</span>
    </div>
    
    <!-- Right side, upper middle -->
    <div class="absolute top-1/3 right-6 bg-white/10 backdrop-blur-md px-3 py-1.5 rounded-lg border border-white/20 z-10">
        <span class="text-white text-xs font-medium">Split Analysis</span>
    </div>
    
    <!-- Right side, lower middle -->
    <div class="absolute bottom-1/4 right-4 bg-white/10 backdrop-blur-md px-3 py-1.5 rounded-lg border border-white/20 z-10">
        <span class="text-white text-xs font-medium">Distance Analysis</span>
    </div>
    
    <!-- Bottom left -->
    <div class="absolute bottom-6 left-1/4 bg-white/10 backdrop-blur-md px-3 py-1.5 rounded-lg border border-white/20 z-10">
        <span class="text-white text-xs font-medium">Run Wild</span>
    </div>
    
    <!-- Bottom right -->
    <div class="absolute bottom-8 right-1/4 bg-white/10 backdrop-blur-md px-3 py-1.5 rounded-lg border border-white/20 z-10">
        <span class="text-white text-xs font-medium">Interval Boost</span>
    </div>
</div>


<style>
/* Inter font family for clean, athletic typography */
.font-inter {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-feature-settings: 'cv02', 'cv03', 'cv04', 'cv11';
    letter-spacing: -0.025em;
}

/* Floating label animations */
.absolute.bg-white\/10 {
    animation: floatLabel 3s ease-in-out infinite alternate;
    transition: all 0.3s ease;
}

.absolute.bg-white\/10:nth-child(odd) {
    animation-delay: 0.5s;
}

.absolute.bg-white\/10:nth-child(even) {
    animation-delay: 1s;
}

@keyframes floatLabel {
    from {
        transform: translateY(0px);
        opacity: 0.8;
    }
    to {
        transform: translateY(-5px);
        opacity: 1;
    }
}

/* Hover effects for labels */
.absolute.bg-white\/10:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: scale(1.05) translateY(-2px);
    border-color: rgba(255, 255, 255, 0.4);
}

/* Enhanced center text styling */
h2.font-inter, h3.font-inter {
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.7);
    font-weight: 900;
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .absolute.bg-white\/10 {
        padding: 0.25rem 0.5rem;
    }
    
    .absolute.bg-white\/10 span {
        font-size: 0.6rem;
    }
    
    /* Adjust positions on mobile */
    .absolute.top-6.left-6 { top: 1rem; left: 1rem; }
    .absolute.top-8.right-8 { top: 1rem; right: 1rem; }
    .absolute.bottom-6.left-1\/4 { bottom: 1rem; left: 1rem; }
    .absolute.bottom-8.right-1\/4 { bottom: 1rem; right: 1rem; }
}

/* Accessibility improvements */
@media (prefers-reduced-motion: reduce) {
    .absolute.bg-white\/10 {
        animation: none;
    }
    
    .absolute.bg-white\/10:hover {
        transform: scale(1.02);
    }
}

/* Focus styles for keyboard navigation */
.absolute.bg-white\/10:focus {
    outline: 2px solid rgba(255, 255, 255, 0.8);
    outline-offset: 2px;
}
</style>
    </div>
</section>

<style>
    /* Enhanced hover effects for feature cards */
    .bg-gray-900:hover {
        transform: translateY(-2px);
        transition: all 0.3s ease;
    }
    
    /* Featured card subtle animation */
    .bg-blue-900 {
        box-shadow: 0 0 20px rgba(59, 130, 246, 0.1);
        animation: subtlePulse 4s ease-in-out infinite alternate;
    }
    
    @keyframes subtlePulse {
        from {
            box-shadow: 0 0 20px rgba(59, 130, 246, 0.1);
        }
        to {
            box-shadow: 0 0 25px rgba(59, 130, 246, 0.15);
        }
    }
    
    /* Improved floating labels */
    .absolute.bg-black\/80 {
        transition: all 0.3s ease;
    }
    
    .absolute.bg-black\/80:hover {
        background: rgba(59, 130, 246, 0.9);
        transform: scale(1.05);
    }
    
    /* Accessibility and performance */
    @media (prefers-reduced-motion: reduce) {
        .bg-blue-900 {
            animation: none;
        }
        
        .bg-gray-900:hover {
            transform: none;
        }
        
        .absolute.bg-black\/80:hover {
            transform: none;
        }
    }
    
    /* Focus styles for keyboard navigation */
    .bg-gray-900:focus-within,
    .bg-blue-900:focus-within {
        outline: 2px solid rgba(59, 130, 246, 0.5);
        outline-offset: 2px;
    }
</style>