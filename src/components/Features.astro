<section id="features" class="bg-black text-white py-20 px-6">
    <div class="max-w-7xl mx-auto">
        <!-- Feature cards grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <!-- Real-Time Pace & Analytics (Featured) -->
            <div class="bg-gradient-to-br from-red-800 to-red-900 p-6 rounded-2xl h-80 relative overflow-hidden">
                <div class="relative z-10 h-full flex flex-col justify-between">
                    <div>
                        <h3 class="text-2xl font-bold mb-6 leading-tight text-white font-inter tracking-tight">
                            Precision Pace<br>
                            Tracking
                        </h3>
                    </div>
                    <div>
                        <p class="text-red-100 text-sm leading-relaxed font-inter">
                            Monitor every step with real-time GPS and pace analytics to keep you right on target. Perfect for training and race day.
                        </p>
                    </div>
                </div>
            </div>
            
            <!-- Smart Pace Detection -->
            <div class="bg-gray-900 p-6 rounded-2xl h-80 border border-gray-800 hover:border-gray-700 transition-colors">
                <div class="h-full flex flex-col justify-between">
                    <div>
                        <h3 class="text-2xl font-bold mb-6 leading-tight text-gray-300 font-inter tracking-tight">
                            Adaptive<br>
                            Training Plans
                        </h3>
                    </div>
                    <div>
                        <p class="text-gray-400 text-sm leading-relaxed font-inter">
                            AI-powered programs that evolve with your progress, keeping you challenged and avoiding burnout.
                        </p>
                    </div>
                </div>
            </div>
            
            <!-- Route Discovery -->
            <div class="bg-gray-900 p-6 rounded-2xl h-80 border border-gray-800 hover:border-gray-700 transition-colors">
                <div class="h-full flex flex-col justify-between">
                    <div>
                        <h3 class="text-2xl font-bold mb-6 leading-tight text-gray-300 font-inter tracking-tight">
                            Route<br>
                            Discovery
                        </h3>
                    </div>
                    <div>
                        <p class="text-gray-400 text-sm leading-relaxed font-inter">
                            Explore curated urban and trail routes with difficulty ratings, so every run feels like a new adventure.
                        </p>
                    </div>
                </div>
            </div>
            
            <!-- Community Challenges -->
            <div class="bg-gray-900 p-6 rounded-2xl h-80 border border-gray-800 hover:border-gray-700 transition-colors">
                <div class="h-full flex flex-col justify-between">
                    <div>
                        <h3 class="text-2xl font-bold mb-6 leading-tight text-gray-300 font-inter tracking-tight">
                            Community<br>
                            Challenges
                        </h3>
                    </div>
                    <div>
                        <p class="text-gray-400 text-sm leading-relaxed font-inter">
                            Join global leaderboards, compete in themed runs, and push each other beyond limits.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Intro Text -->
        <div class="text-center my-16">
            <p class="text-gray-300 text-lg max-w-3xl mx-auto leading-relaxed">
              Your runs + your music + your squad = unstoppable energy. Track your progress, sync your beats, and connect with runners who actually understand the grind.
            </p>
        </div>

  <!-- Hero Image Section -->
<div class="relative rounded-3xl overflow-hidden h-[400px] sm:min-h-[500px] md:min-h-[600px] lg:min-h-[700px]">
    <img 
        src="/users.jpg" 
        alt="Athletes running" 
        class="w-full h-full object-cover"
    />
    
    <!-- Dynamic overlay with gradient -->
    <div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/40 to-black/60"></div>

    <!-- Center text - Responsive typography -->
