---
import NavbarClient from './client/NavbarClient';
import MobileMenuClient from './client/MobileMenuClient';
---

<!-- Skip Navigation Link for Screen Readers -->
<a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-white text-black px-4 py-2 rounded-md z-[100] font-medium">
    Skip to main content
</a>

<header role="banner">
    <nav class="fixed top-0 left-0 right-0 w-full bg-black bg-opacity-20 backdrop-blur-sm text-white py-6 sm:py-8 z-50" 
         style="margin: 0; padding-left: 0; padding-right: 0;"
         role="navigation" 
         aria-label="Main navigation"
         itemscope 
         itemtype="https://schema.org/SiteNavigationElement">
        <div class="w-full px-4 sm:px-6 lg:max-w-7xl lg:mx-auto relative">
            <NavbarClient client:load />
        </div>
        
        <!-- Mobile menu - Full width -->
        <MobileMenuClient client:load />
    </nav>
</header>

<!-- JSON-LD Structured Data for SEO -->
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "SoftwareApplication",
    "name": "Pacebeats",
    "description": "Running companion app that syncs every stride with the perfect beat. Train smarter, push further, and let music power your journey.",
    "url": "https://www.pacebeats.top",
    "applicationCategory": "HealthApplication",
    "operatingSystem": ["iOS", "Android"],
    "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
    },
    "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "4.8",
        "ratingCount": "150"
    },
    "author": {
        "@type": "Organization",
        "name": "Pacebeats Team",
        "url": "https://www.pacebeats.top"
    },
    "featureList": [
        "Real-Time Pace & Analytics",
        "Smart Pace Detection", 
        "Spotify Integration",
        "Smartwatch Companion",
        "Community Challenges",
        "Personalized Training Plans"
    ]
}
</script>

<style>
    nav {
        box-sizing: border-box;
        margin-left: 0 !important;
        margin-right: 0 !important;
        padding-left: 0 !important;
        padding-right: 0 !important;
    }
    
    header {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    
    body {
        margin: 0;
        padding: 0;
    }
</style>
