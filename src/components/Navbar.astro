    /* Enhanced focus styles for accessibility */
    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
    }
    
    .focus\\:not-sr-only:focus {
        position: static;
        width: auto;
        height: auto;
        padding: 0.5rem 1rem;
        margin: 0;
        overflow: visible;
        clip: auto;
        white-space: normal;
    }
    
    /* Enhanced dropdown hover effect with GPU acceleration */
    .group:hover .group-hover\\:opacity-100 {
        opacity: 1;
        visibility: visible;
        transform: translateZ(0); /* GPU acceleration */
    }
    
    /* Smooth transitions for mobile nav links */
